<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fefaef"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.anuj_ilm.connect_2.SignupActivity"
    tools:showIn="@layout/activity_signup">

    <RelativeLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/imageLayout"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/side_nav_bar">

            <ImageView
                android:id="@+id/signUpImageView"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/kiitlogosquare" />
        </RelativeLayout>

        <!-- Sign in layout starts -->

        <RelativeLayout
            android:id="@+id/signInLayout"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/corner"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginVertical="50dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/studentsUsernameSignIn"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:ems="10"
                        android:hint="Username"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/mailTextSignIn"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="&#64;kiit.ac.in"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/emailImageViewSignIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/email" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/studentsPasswordSignIn"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:hint="Password"
                        android:inputType="textPassword" />

                    <ImageView
                        android:id="@+id/showPasswordButtonSignIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:onClick="showPasswordSignIn"
                        app:srcCompat="@drawable/pswd" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <!-- Sign in layout ends -->

        <!-- Sign up layout starts -->

        <RelativeLayout
            android:id="@+id/signUpLayout"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="180dp"
            android:background="@drawable/corner"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="1"
            android:shadowRadius="5"
            android:visibility="invisible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/studentsNameSignUp"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:ems="10"
                        android:hint="Name"
                        android:inputType="textPersonName" />

                    <ImageView
                        android:id="@+id/studentsNameSignUpImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        app:srcCompat="@drawable/user" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/studentsUsernameSignUp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:ems="10"
                        android:hint="Username"
                        android:inputType="number" />

                    <TextView
                        android:id="@+id/mailText"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="&#64;kiit.ac.in"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/emailImageViewSignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/email" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/studentsPasswordSignUp"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:hint="Password"
                        android:inputType="textPassword" />

                    <ImageView
                        android:id="@+id/showPasswordButtonSignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:onClick="showPasswordSignUp"
                        app:srcCompat="@drawable/pswd" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/signInButton"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_below="@+id/signInLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-25dp"
            android:background="@drawable/signupbuttoninside"
            android:onClick="studentsSignInFunction"
            android:text="Sign In"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/signUpButton"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_below="@+id/signUpLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-25dp"
            android:background="@drawable/signupbuttoninside"
            android:onClick="studentsSignUpFunction"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textSize="25sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/layoutSwitchSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signUpButton"
            android:layout_marginTop="8dp"
            android:onClick="goToSignInLayout"
            android:text="Already a user?"
            android:textAlignment="center"
            android:textSize="20sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/layoutSwitchSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signInButton"
            android:layout_marginTop="10dp"
            android:onClick="goToSignUpLayout"
            android:text="Not a user ? Register"
            android:textAlignment="center"
            android:textSize="20sp"
            android:visibility="visible" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/helpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="showHelpLayout"
        android:tint="#000000"
        app:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98"
        app:srcCompat="@android:drawable/ic_menu_help" />

</android.support.constraint.ConstraintLayout>